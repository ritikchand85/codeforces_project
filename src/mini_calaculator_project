/*Practice.jsx content
function add(a,b){
return a+b;
}
function subtract(a,b){
    return a-b;
}
function multiply(a,b){
    return a*b;
}
function divide(a,b){
    let div=a/b;
    //if we want only two decimals
    //toFixed is used for constraint number till 2 decimal places
    div=div.toFixed(2);
    return div;
}

export {add,subtract,multiply,divide};*/


